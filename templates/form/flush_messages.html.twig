{% for message in app.flashes('error') %}
    <div class="alert alert-danger m-2 mt-3" role="alert">
        {{ message }}
    </div>
{% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success m-2 mt-3" role="alert">
            {{ message }}
        </div>
    {% endfor %}